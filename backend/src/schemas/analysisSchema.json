{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["success", "analysis"],
  "properties": {
    "success": {
      "type": "boolean",
      "description": "Whether the analysis was successful"
    },
    "error": {
      "type": "string",
      "description": "Error message if success is false"
    },
    "analysis": {
      "type": "object",
      "required": ["algorithm", "inputs", "metaphors"],
      "properties": {
        "algorithm": {
          "type": "object",
          "required": ["algorithmType", "category", "timeComplexity", "spaceComplexity", "explanation"],
          "properties": {
            "algorithmType": {
              "type": "string",
              "description": "The type of algorithm (e.g., 'Binary Search', 'Linear Search')"
            },
            "category": {
              "type": "string",
              "description": "The category of the algorithm (e.g., 'Searching', 'Sorting')"
            },
            "timeComplexity": {
              "type": "string",
              "description": "Big O notation for time complexity",
              "pattern": "^O\\([\\w\\s+*()²³⁴⁵⁶⁷⁸⁹^0-9!./,-]+\\)$"
            },
            "spaceComplexity": {
              "type": "string",
              "description": "Big O notation for space complexity",
              "pattern": "^O\\([\\w\\s+*()²³⁴⁵⁶⁷⁸⁹^0-9!./,-]+\\)$"
            },
            "confidence": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "explanation": {
              "type": "string",
              "description": "Detailed explanation of how the algorithm works"
            }
          }
        },
        "inputs": {
          "type": "object",
          "required": ["inputs", "examples"],
          "properties": {
            "inputs": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "type", "description", "constraints"],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "constraints": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            },
            "examples": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["input", "expectedOutput"],
                "properties": {
                  "input": {
                    "type": "object",
                    "description": "Input parameters for the algorithm - flexible structure based on algorithm requirements",
                    "additionalProperties": true,
                    "minProperties": 1
                  },
                  "expectedOutput": {
                    "oneOf": [
                      {
                        "type": "string"
                      },
                      {
                        "type": "number"
                      },
                      {
                        "type": "boolean"
                      },
                      {
                        "type": "array"
                      },
                      {
                        "type": "object"
                      }
                    ],
                    "description": "Expected output of the algorithm - can be any valid JSON type"
                  }
                }
              }
            }
          }
        },
        "metaphors": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "description", "learningStyle", "steps", "elements", "visualProperties"],
            "properties": {
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "learningStyle": {
                "type": "string",
                "enum": ["visual", "auditory", "kinesthetic"]
              },
              "steps": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "elements": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "visualProperties": {
                "type": "object",
                "required": ["primaryElements", "secondaryElements", "animations", "interactiveElements", "layout", "colorScheme"],
                "properties": {
                  "primaryElements": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "secondaryElements": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "animations": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "interactiveElements": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "layout": {
                    "type": "object",
                    "required": ["type", "arrangement"],
                    "properties": {
                      "type": {
                        "type": "string"
                      },
                      "arrangement": {
                        "type": "string"
                      }
                    }
                  },
                  "colorScheme": {
                    "type": "object",
                    "required": ["primary", "secondary", "highlight"],
                    "properties": {
                      "primary": {
                        "type": "string"
                      },
                      "secondary": {
                        "type": "string"
                      },
                      "highlight": {
                        "type": "string"
                      }
                    }
                  }
                }
              },
              "suggestedControls": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
} 